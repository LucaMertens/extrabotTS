{
  "compilerOptions": {
    /* Configuration for Node ^8.0.0 */
    /* "lib": ["es2017"],
    "module": "commonjs",
    "target": "es2017", */

    /* Configuration for Node ^10.0.0 */
    /* "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018", */

    /* Configuration for Node ^12.0.0 */
    "lib": ["DOM", "es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown"],
    "module": "CommonJS",
    "target": "ESNext",

    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    // "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    // "resolveJsonModule": true,
    "pretty": true,

    /* This exists because Discord.Js causes an error during compilation. Try to remove this in the future. */
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src"]
}
